doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    script(src='/javascripts/jquery-2.2.4.min.js')
    script(src='/javascripts/bootstrap.min.js')
    script(src='/javascripts/scripts.js')
    
  body
    div.modal.fade#popup(tabindex='-1', role='dialog', aria-labelledby='popup', aria-hidden='true')
      div.modal-dialog(role='document')
        div.modal-content
          div.modal-header
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') &times;
            h4.modal-title#popupTitle Empty Modal
          div.modal-body#popupBody
            p Enter text here.
          div.modal-footer
            button.btn.btn-secondary(type='button', data-dismiss='modal') Close
            button.btn.btn-primary(type='button', data-dismiss='modal')#popupSave Save changes

    nav.navbar.navbar-inverse.navbar-fixed-top
      div.container
        div.navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar') 
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') VidsJS
        div#navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            //-TODO: change active depending on where we are (use mixin)
            li.active 
              a(href='/')= 'Virtual View'
            li
              a(href='/pview')= 'Physical View'
            li
              a(href='/sview')= 'Seen View'
            li
              a(href='/scandirs')= 'Scan Dirs'
    div.container#maincontainer
      block content